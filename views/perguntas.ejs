<!-- partials é um fragmento de código transformado em um componente 
        com a finalidade de ser reaproveitado em outras views -->
<%- include ('partials/head.ejs'); %>

    <body>
        <%- include ('partials/navbar.ejs'); %>
            <div class="container">
                <div class="card" id="formulario-pergunta">
                    <div class="card-header">
                        <h3>Realizar pergunta</h3>
                    </div>
                    <div class="card-body">
                        <form action="">
                            <label for="titulo">Titulo</label>
                            <br>
                            <input type="text" name="titulo" class="form-control" placeholder="Titulo">
                            <br>
                            <label for="descricao">Descrição</label>
                            <textarea name="descricao" class="form-control"
                                placeholder="Descreva sua pergunta aqui"></textarea>
                            <br>
                            <button class="btn btn-success">Enviar</button>
                        </form>
                    </div>
                </div>
            </div>
    </body>

    <%- include ('partials/footer.ejs'); %>